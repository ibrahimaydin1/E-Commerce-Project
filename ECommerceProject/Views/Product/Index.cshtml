@using System.Linq
@{
    ViewData["Title"] = "Ürünler";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-3">
            <div class="card">
                <div class="card-header">
                    <h6>Kategoriler</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.Categories != null)
                    {
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a asp-area="" asp-controller="Product" asp-action="Index" class="@(ViewBag.SelectedCategoryId == null ? "fw-bold text-primary" : "text-decoration-none")">
                                    Tüm Ürünler
                                </a>
                            </li>
                            @foreach (var category in ViewBag.Categories)
                            {
                                <li class="mb-2">
                                    <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-categoryId="@category.Id" 
                                       class="@(category.Id == ViewBag.SelectedCategoryId ? "fw-bold text-primary" : "text-decoration-none")">
                                        @category.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3>Ürünler</h3>
                <span class="badge bg-primary">@Model.Count ürün</span>
            </div>

            @if (Model != null && Model.Count > 0)
            {
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 product-card">
                                <div class="product-image">
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="fas fa-image fa-3x text-muted"></i>
                                        </div>
                                    }
                                    @if (product.IsFeatured)
                                    {
                                        <span class="badge bg-warning position-absolute top-0 start-0 m-2">Öne Çıkan</span>
                                    }
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text text-muted small">@product.Category?.Name</p>
                                    <div class="product-price">
                                        @if (product.DiscountedPrice != null && product.DiscountedPrice.HasValue)
                                        {
                                            <span class="text-decoration-line-through text-muted">@product.Price.ToString("F2") TL</span>
                                            <span class="text-danger fw-bold">@product.DiscountedPrice.Value.ToString("F2") TL</span>
                                        }
                                        else
                                        {
                                            <span class="fw-bold text-primary">@product.Price.ToString("F2") TL</span>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-primary btn-sm add-to-cart" data-product-id="@product.Id">
                                            <i class="fas fa-shopping-cart me-1"></i>Sepete Ekle
                                        </button>
                                        <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm">Detaylar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Ürün bulunamadı.
                </div>
            }
        </div>
    </div>
</div>
