@model List<ECommerceProject.Models.Product>
@{
    ViewData["Title"] = "Ürün Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 text-gray-800">Ürün Yönetimi</h1>
                <a href="/Admin/ProductEdit" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Yeni Ürün
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Ürün Listesi</h6>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Resim</th>
                                        <th>Ürün Adı</th>
                                        <th>Kategori</th>
                                        <th>Fiyat</th>
                                        <th>Stok</th>
                                        <th>SKU</th>
                                        <th>Öne Çıkan</th>
                                        <th>Oluşturulma</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var urun in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(urun.ImageUrl))
                                                {
                                                    <img src="@urun.ImageUrl" alt="@urun.Name" style="width: 50px; height: 50px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div style="width: 50px; height: 50px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                                                        <i class="fas fa-image text-gray-400"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <strong>@urun.Name</strong><br>
                                                <small class="text-muted">@urun.Description.Substring(0, Math.Min(100, urun.Description.Length))...</small>
                                            </td>
                                            <td>@urun.Category?.Name</td>
                                            <td>@urun.Price.ToString("F2") TL</td>
                                            <td>
                                                @if (urun.StockQuantity > 0)
                                                {
                                                    <span class="text-success">@urun.StockQuantity</span>
                                                }
                                                else
                                                {
                                                    <span class="text-danger">Stokta Yok</span>
                                                }
                                            </td>
                                            <td>@urun.SKU</td>
                                            <td>
                                                @if (urun.IsFeatured)
                                                {
                                                    <span class="badge bg-success">Evet</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Hayır</span>
                                                }
                                            </td>
                                            <td>@urun.CreatedAt.ToString("dd.MM.yyyy")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="/Admin/ProductEdit/@urun.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="/Product/Details/@urun.Id" target="_blank" class="btn btn-sm btn-outline-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <form method="post" action="/Admin/ProductDelete/@urun.Id" style="display: inline;">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu ürünü silmek istediğinizden emin misiniz?')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-box fa-5x text-gray-300 mb-3"></i>
                            <h4 class="text-gray-500">Henüz ürün bulunmuyor</h4>
                            <p class="text-gray-400">İlk ürününüzü eklemek için "Yeni Ürün" butonuna tıklayın.</p>
                            <a href="/Admin/ProductEdit" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>İlk Ürünü Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
