@model List<ECommerceProject.Models.Order>
@{
    ViewData["Title"] = "Sipariş Geçmişi";
}

<div class="container mt-4">
    <h2 class="mb-4">Sipariş Geçmişi</h2>
    
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-bag fa-5x text-muted mb-3"></i>
            <h3 class="text-muted">Henüz siparişiniz yok</h3>
            <p class="text-muted">Alışveriş yapmak için <a href="/Product/Index">ürünlerimizi</a> inceleyin.</p>
            <a href="/Product/Index" class="btn btn-primary">Alışverişe Başla</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var siparis in Model)
            {
                <div class="col-lg-12 mb-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0">Sipariş No: @siparis.OrderNumber</h6>
                                <small class="text-muted">@siparis.OrderDate.ToString("dd.MM.yyyy HH:mm")</small>
                            </div>
                            <div>
                                <span class="badge bg-@GetStatusColor(siparis.OrderStatus)">@siparis.OrderStatus</span>
                                <span class="badge bg-@(GetPaymentStatusColor(siparis.PaymentStatus))">@siparis.PaymentStatus</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h6>Ürünler</h6>
                                    @foreach (var item in siparis.OrderItems.Take(3))
                                    {
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>@item.Product.Name x @item.Quantity</span>
                                            <span>@item.TotalPrice.ToString("F2") TL</span>
                                        </div>
                                    }
                                    @if (siparis.OrderItems.Count > 3)
                                    {
                                        <div class="text-muted small">
                                            +@(siparis.OrderItems.Count - 3) ürün daha
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4 text-end">
                                    <div class="mb-2">
                                        <strong>Toplam Tutar:</strong><br>
                                        <span class="text-primary fs-5">@siparis.TotalAmount.ToString("F2") TL</span>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <a href="/Checkout/OrderDetails/@siparis.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i>Detaylar
                                        </a>
                                        @if (siparis.OrderStatus == OrderStatus.Pending)
                                        {
                                            <button class="btn btn-sm btn-outline-danger" onclick="cancelOrder(@siparis.Id)">
                                                <i class="fas fa-times me-1"></i>İptal
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function cancelOrder(orderId) {
            if (confirm('Bu siparişi iptal etmek istediğinizden emin misiniz?')) {
                // İptal işlemleri burada yapılacak
                alert('Sipariş iptal özelliği yakında eklenecek');
            }
        }
    </script>
}

@functions {
    string GetStatusColor(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "warning",
            OrderStatus.Processing => "info",
            OrderStatus.Shipped => "primary",
            OrderStatus.Delivered => "success",
            OrderStatus.Cancelled => "danger",
            _ => "secondary"
        };
    }
    
    string GetPaymentStatusColor(PaymentStatus status)
    {
        return status switch
        {
            PaymentStatus.Pending => "warning",
            PaymentStatus.Completed => "success",
            PaymentStatus.Failed => "danger",
            PaymentStatus.Refunded => "info",
            _ => "secondary"
        };
    }
}
