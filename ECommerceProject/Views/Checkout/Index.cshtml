@model ECommerceProject.Controllers.CheckoutViewModel
@{
    ViewData["Title"] = "Ödeme";
}

<div class="container mt-4">
    <h2 class="mb-4">Ödeme</h2>
    
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Teslimat Bilgileri</h5>
                </div>
                <div class="card-body">
                    <form id="checkout-form">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName" class="form-label">Ad</label>
                                <input type="text" class="form-control" id="firstName" value="@Model.User?.FirstName" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName" class="form-label">Soyad</label>
                                <input type="text" class="form-control" id="lastName" value="@Model.User?.LastName" required>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" class="form-control" id="email" value="@Model.User?.Email" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="phone" class="form-label">Telefon</label>
                            <input type="tel" class="form-control" id="phone" value="@Model.User?.PhoneNumber">
                        </div>
                        
                        <div class="mb-3">
                            <label for="shippingAddress" class="form-label">Teslimat Adresi</label>
                            <textarea class="form-control" id="shippingAddress" name="ShippingAddress" rows="3" required>@Model.User?.Address</textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label for="billingAddress" class="form-label">Fatura Adresi (Aynıysa boş bırakın)</label>
                            <textarea class="form-control" id="billingAddress" name="BillingAddress" rows="3"></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label for="notes" class="form-label">Sipariş Notları</label>
                            <textarea class="form-control" id="notes" name="Notes" rows="2" placeholder="Özel istekleriniz varsa buraya yazabilirsiniz..."></textarea>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Ödeme Yöntemi</h5>
                </div>
                <div class="card-body">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="creditCard" value="CreditCard" checked>
                        <label class="form-check-label" for="creditCard">
                            <i class="fas fa-credit-card me-2"></i>Kredi Kartı
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="bankTransfer" value="BankTransfer">
                        <label class="form-check-label" for="bankTransfer">
                            <i class="fas fa-university me-2"></i>Havale/EFT
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="cashOnDelivery" value="CashOnDelivery">
                        <label class="form-check-label" for="cashOnDelivery">
                            <i class="fas fa-money-bill-wave me-2"></i>Kapıda Ödeme
                        </label>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Sipariş Özeti</h5>
                </div>
                <div class="card-body">
                    <h6 class="mb-3">Ürünler</h6>
                    
                    @foreach (var item in Model.CartItems)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>@item.Product.Name x @item.Quantity</span>
                            <span>@(item.Quantity * item.UnitPrice).ToString("F2") TL</span>
                        </div>
                    }
                    
                    <hr>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>Ara Toplam:</span>
                        <span>@Model.Subtotal.ToString("F2") TL</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Kargo:</span>
                        <span>@(Model.ShippingCost == 0 ? "Ücretsiz" : Model.ShippingCost.ToString("F2") + " TL")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>KDV (%18):</span>
                        <span>@(Model.Subtotal * Model.TaxRate).ToString("F2") TL</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <h5>Genel Toplam:</h5>
                        <h5 class="text-primary">@(Model.Subtotal + Model.ShippingCost + (Model.Subtotal * Model.TaxRate)).ToString("F2") TL</h5>
                    </div>
                    
                    <button type="button" class="btn btn-primary btn-lg w-100" id="complete-payment">
                        <i class="fas fa-lock me-2"></i>Güvenli Ödeme
                    </button>
                    
                    <div class="text-center mt-3">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt me-1"></i>
                            Ödeme bilgileriniz SSL ile korunmaktadır
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#complete-payment').click(function() {
                var button = $(this);
                
                // Form validasyonu
                if (!$('#checkout-form')[0].checkValidity()) {
                    $('#checkout-form')[0].reportValidity();
                    return;
                }
                
                button.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>İşleniyor...');
                
                var formData = {
                    ShippingAddress: $('#shippingAddress').val(),
                    BillingAddress: $('#billingAddress').val() || $('#shippingAddress').val(),
                    Notes: $('#notes').val(),
                    PaymentMethod: $('input[name="paymentMethod"]:checked').val()
                };
                
                $.post('/Checkout/ProcessPayment', formData, function(response) {
                    if (response.success) {
                        // Başarılı - ödeme sayfasına yönlendir
                        window.location.href = '/Checkout/Payment?orderId=' + response.orderId + '&orderNumber=' + response.orderNumber + '&amount=' + @(Model.Subtotal + Model.ShippingCost + (Model.Subtotal * Model.TaxRate)).ToString("F2").Replace(",", ".") + '&address=' + encodeURIComponent(formData.ShippingAddress);
                    } else {
                        alert(response.message);
                        button.prop('disabled', false).html('<i class="fas fa-lock me-2"></i>Güvenli Ödeme');
                    }
                }).fail(function() {
                    alert('Ödeme işlemi sırasında bir hata oluştu');
                    button.prop('disabled', false).html('<i class="fas fa-lock me-2"></i>Güvenli Ödeme');
                });
            });
        });
    </script>
}
