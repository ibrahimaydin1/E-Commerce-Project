@model ECommerceProject.Models.Order
@{
    ViewData["Title"] = "Sipariş Onayı";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <div class="text-success mb-3">
            <i class="fas fa-check-circle fa-5x"></i>
        </div>
        <h1 class="mb-3">Siparişiniz Alındı!</h1>
        <p class="lead text-muted">Siparişiniz başarıyla oluşturuldu ve işleme alındı.</p>
    </div>
    
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Sipariş Detayları</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Sipariş No:</strong> @Model.OrderNumber
                        </div>
                        <div class="col-md-6">
                            <strong>Sipariş Tarihi:</strong> @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Durum:</strong> 
                            <span class="badge bg-@GetStatusColor(Model.OrderStatus)">@Model.OrderStatus</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Ödeme Durumu:</strong>
                            <span class="badge bg-info">@Model.PaymentStatus</span>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.ShippingAddress))
                    {
                        <div class="mb-3">
                            <strong>Teslimat Adresi:</strong><br>
                            @Model.ShippingAddress
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-3">
                            <strong>Sipariş Notları:</strong><br>
                            @Model.Notes
                        </div>
                    }
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Sipariş Ürünleri</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.OrderItems)
                    {
                        <div class="row mb-3 pb-3 border-bottom">
                            <div class="col-md-8">
                                <h6>@item.Product.Name</h6>
                                <p class="text-muted small mb-0">@item.Product.SKU</p>
                            </div>
                            <div class="col-md-4 text-end">
                                <div>@item.Quantity x @item.UnitPrice.ToString("F2") TL</div>
                                <div class="fw-bold">@item.TotalPrice.ToString("F2") TL</div>
                            </div>
                        </div>
                    }
                    
                    <div class="row mt-4">
                        <div class="col-md-8">
                            <strong>Ara Toplam:</strong>
                        </div>
                        <div class="col-md-4 text-end">
                            @Model.Subtotal.ToString("F2") TL
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-8">
                            <strong>Kargo:</strong>
                        </div>
                        <div class="col-md-4 text-end">
                            @(Model.ShippingAmount == 0 ? "Ücretsiz" : Model.ShippingAmount.ToString("F2") + " TL")
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-8">
                            <strong>KDV (%18):</strong>
                        </div>
                        <div class="col-md-4 text-end">
                            @Model.TaxAmount.ToString("F2") TL
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row">
                        <div class="col-md-8">
                            <h5>Genel Toplam:</h5>
                        </div>
                        <div class="col-md-4 text-end">
                            <h5 class="text-primary">@Model.TotalAmount.ToString("F2") TL</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Sonraki Adımlar</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="text-primary me-3">
                            <i class="fas fa-box fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Hazırlanıyor</h6>
                            <small class="text-muted">Siparişiniz hazırlanıyor</small>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center mb-3">
                        <div class="text-muted me-3">
                            <i class="fas fa-truck fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Kargoya Verilecek</h6>
                            <small class="text-muted">En kısa sürede kargoya verilecek</small>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center mb-3">
                        <div class="text-muted me-3">
                            <i class="fas fa-home fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Teslimat</h6>
                            <small class="text-muted">Adresinize teslim edilecek</small>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="mb-3">
                        <h6>E-posta Bildirimleri</h6>
                        <small class="text-muted">Sipariş durumunuz hakkında e-posta ile bilgilendirileceksiniz.</small>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <a href="/Checkout/OrderHistory" class="btn btn-outline-primary">
                            <i class="fas fa-list me-2"></i>Sipariş Geçmişi
                        </a>
                        <a href="/Product/Index" class="btn btn-primary">
                            <i class="fas fa-shopping-bag me-2"></i>Alışverişe Devam Et
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusColor(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "warning",
            OrderStatus.Processing => "info",
            OrderStatus.Shipped => "primary",
            OrderStatus.Delivered => "success",
            OrderStatus.Cancelled => "danger",
            _ => "secondary"
        };
    }
}
