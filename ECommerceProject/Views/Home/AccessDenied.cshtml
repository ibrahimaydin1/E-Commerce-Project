@{
    ViewData["Title"] = "Erişim Reddedildi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="access-denied-container">
    <div class="access-denied-card">
        <div class="access-denied-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        
        <h1 class="access-denied-title">Erişim Reddedildi</h1>
        
        <p class="access-denied-message">
            Bu sayfaya erişim izniniz bulunmamaktadır. Bu sayfaya erişmek için admin rolüne sahip olmanız gerekmektedir.
        </p>
        
        <div class="access-denied-actions">
            <a href="@Url.Action("Index", "Home")" class="btn-home">
                <i class="fas fa-home"></i> Ana Sayfaya Dön
            </a>
            
            <a href="@Url.Action("Login", "Account", new { area = "Identity" })" class="btn-login">
                <i class="fas fa-sign-in-alt"></i> Giriş Yap
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/custom.css" />
}
