@{
    ViewData["Title"] = ViewBag.Category?.Name + " - Kategori Detayları";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-area="" asp-controller="Category" asp-action="Index">Kategoriler</a>
                    </li>
                    <li class="breadcrumb-item active">@ViewBag.Category?.Name</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h3>@ViewBag.Category?.Name</h3>
                </div>
                <div class="card-body">
                    <p>@ViewBag.Category?.Description</p>
                    
                    @if (ViewBag.Category?.SubCategories != null && ViewBag.Category.SubCategories.Any())
                    {
                        <h5 class="mt-4">Alt Kategoriler</h5>
                        <div class="row">
                            @foreach (var subCategory in ViewBag.Category.SubCategories)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6>@subCategory.Name</h6>
                                            <a asp-area="" asp-controller="Category" asp-action="Products" asp-route-id="@subCategory.Id" class="btn btn-sm btn-outline-primary">Ürünleri Gör</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
