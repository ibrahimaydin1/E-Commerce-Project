@model ECommerceProject.Models.Cart
@{
    ViewData["Title"] = "Sepetim";
}

<div class="container mt-4">
    <h2 class="mb-4">Sepetim</h2>
    
    @if (Model == null || Model.CartItems == null || !Model.CartItems.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-5x text-muted mb-3"></i>
            <h3 class="text-muted">Sepetiniz boş</h3>
            <p class="text-muted">Alışverişe başlamak için <a href="/Product/Index">ürünlerimizi</a> inceleyin.</p>
            <a href="/Product/Index" class="btn btn-primary">Alışverişe Devam Et</a>
        </div>
    }
    else
    {
        <!-- Desktop Görünüm -->
        <div class="cart-table d-none d-md-block">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Ürün</th>
                            <th>Fiyat</th>
                            <th>Miktar</th>
                            <th>Toplam</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@item.Product.ImageUrl" alt="@item.Product.Name" style="width: 60px; height: 60px; object-fit: cover;" class="me-3" />
                                        <div>
                                            <h6 class="mb-0">@item.Product.Name</h6>
                                            <small class="text-muted">@item.Product.SKU</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@item.UnitPrice.ToString("F2") TL</td>
                                <td>
                                    <div class="input-group" style="width: 120px;">
                                        <button class="btn btn-outline-secondary btn-sm" onclick="updateQuantity(@item.ProductId, @(item.Quantity - 1))">-</button>
                                        <input type="text" class="form-control text-center" value="@item.Quantity" readonly />
                                        <button class="btn btn-outline-secondary btn-sm" onclick="updateQuantity(@item.ProductId, @(item.Quantity + 1))">+</button>
                                    </div>
                                </td>
                                <td><strong>@((item.Quantity * item.UnitPrice).ToString("F2")) TL</strong></td>
                                <td>
                                    <button class="btn btn-sm btn-outline-danger" onclick="removeFromCart(@item.ProductId)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Mobil Görünüm -->
        <div class="cart-mobile d-md-none">
            @foreach (var item in Model.CartItems)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <img src="@item.Product.ImageUrl" alt="@item.Product.Name" style="width: 80px; height: 80px; object-fit: cover;" class="me-3" />
                            <div class="flex-grow-1">
                                <h6 class="mb-1">@item.Product.Name</h6>
                                <small class="text-muted">@item.Product.SKU</small>
                                <div class="text-primary fw-bold mt-1">@item.UnitPrice.ToString("F2") TL</div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="input-group" style="width: 120px;">
                                <button class="btn btn-outline-secondary btn-sm" onclick="updateQuantity(@item.ProductId, @(item.Quantity - 1))">-</button>
                                <input type="text" class="form-control text-center" value="@item.Quantity" readonly />
                                <button class="btn btn-outline-secondary btn-sm" onclick="updateQuantity(@item.ProductId, @(item.Quantity + 1))">+</button>
                            </div>
                            <div class="text-end">
                                <div class="fw-bold">@((item.Quantity * item.UnitPrice).ToString("F2")) TL</div>
                                <button class="btn btn-sm btn-outline-danger mt-1" onclick="removeFromCart(@item.ProductId)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Sepet Özeti -->
        <div class="cart-summary">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Sipariş Özeti</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Ara Toplam:</span>
                        <span>@Model.CartItems.Sum(x => x.Quantity * x.UnitPrice).ToString("F2") TL</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Kargo:</span>
                        <span>Ücretsiz</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <h5>Genel Toplam:</h5>
                        <h5 class="text-primary">@Model.CartItems.Sum(x => x.Quantity * x.UnitPrice).ToString("F2") TL</h5>
                    </div>
                    <div class="d-grid gap-2">
                        <a href="/Checkout/Index" class="btn btn-primary">
                            <i class="fas fa-credit-card me-2"></i>Ödemeye Geç
                        </a>
                        <button class="btn btn-outline-secondary" onclick="clearCart()">
                            <i class="fas fa-trash me-2"></i>Sepeti Boşalt
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Miktar artır
            $(document).on('click', '.increase-qty', function() {
                var input = $(this).siblings('.quantity-input');
                var currentQty = parseInt(input.val());
                var maxQty = parseInt(input.attr('max'));
                
                if (currentQty < maxQty) {
                    input.val(currentQty + 1);
                    updateQuantity($(this).closest('.cart-item').data('cart-item-id'), currentQty + 1);
                }
            });
            
            // Miktar azalt
            $(document).on('click', '.decrease-qty', function() {
                var input = $(this).siblings('.quantity-input');
                var currentQty = parseInt(input.val());
                
                if (currentQty > 1) {
                    input.val(currentQty - 1);
                    updateQuantity($(this).closest('.cart-item').data('cart-item-id'), currentQty - 1);
                }
            });
            
            // Manuel miktar değişimi
            $(document).on('change', '.quantity-input', function() {
                var qty = parseInt($(this).val());
                var maxQty = parseInt($(this).attr('max'));
                
                if (qty < 1) qty = 1;
                if (qty > maxQty) qty = maxQty;
                
                $(this).val(qty);
                updateQuantity($(this).closest('.cart-item').data('cart-item-id'), qty);
            });
            
            // Ürünü sepetten çıkar
            $(document).on('click', '.remove-item', function() {
                var cartItemId = $(this).closest('.cart-item').data('cart-item-id');
                
                if (confirm('Bu ürünü sepetten çıkarmak istediğinizden emin misiniz?')) {
                    removeFromCart(cartItemId);
                }
            });
            
            // Sepeti boşalt
            $('.clear-cart').click(function() {
                if (confirm('Sepeti tamamen boşaltmak istediğinizden emin misiniz?')) {
                    clearCart();
                }
            });
        });
        
        function updateQuantity(cartItemId, quantity) {
            $.post('/Cart/UpdateQuantity', { cartItemId: cartItemId, quantity: quantity }, function(response) {
                if (response.success) {
                    location.reload(); // Basit çözüm - sayfayı yenile
                } else {
                    alert(response.message);
                }
            });
        }
        
        function removeFromCart(cartItemId) {
            $.post('/Cart/RemoveFromCart', { cartItemId: cartItemId }, function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    alert(response.message);
                }
            });
        }
        
        function clearCart() {
            $.post('/Cart/ClearCart', function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    alert(response.message);
                }
            });
        }
    </script>
}
