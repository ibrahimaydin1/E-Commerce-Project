@model ECommerceProject.Models.Cart
@{
    ViewData["Title"] = "Sepetim";
}

<div class="container mt-4">
    <h2 class="mb-4">Sepetim</h2>
    
    @if (Model == null || Model.CartItems == null || !Model.CartItems.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-5x text-muted mb-3"></i>
            <h3 class="text-muted">Sepetiniz boş</h3>
            <p class="text-muted">Alışverişe başlamak için <a href="/Product/Index">ürünlerimizi</a> inceleyin.</p>
            <a href="/Product/Index" class="btn btn-primary">Alışverişe Devam Et</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Sepet Ürünleri (@Model.CartItems.Count())</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="row mb-3 pb-3 border-bottom cart-item" data-cart-item-id="@item.Id">
                                <div class="col-md-2">
                                    @if (!string.IsNullOrEmpty(item.Product.ImageUrl))
                                    {
                                        <img src="@item.Product.ImageUrl" class="img-fluid rounded" alt="@item.Product.Name">
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 80px;">
                                            <i class="fas fa-image fa-2x text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4">
                                    <h6 class="mb-1">@item.Product.Name</h6>
                                    <p class="text-muted small mb-1">@item.Product.Category?.Name</p>
                                    <p class="text-muted small mb-0">SKU: @item.Product.SKU</p>
                                </div>
                                <div class="col-md-2">
                                    <div class="input-group input-group-sm">
                                        <button class="btn btn-outline-secondary decrease-qty" type="button">-</button>
                                        <input type="number" class="form-control text-center quantity-input" value="@item.Quantity" min="1" max="@item.Product.StockQuantity">
                                        <button class="btn btn-outline-secondary increase-qty" type="button">+</button>
                                    </div>
                                    <small class="text-muted">Stok: @item.Product.StockQuantity</small>
                                </div>
                                <div class="col-md-2 text-center">
                                    <div class="unit-price">@item.UnitPrice.ToString("F2") TL</div>
                                    <small class="text-muted">Birim fiyat</small>
                                </div>
                                <div class="col-md-2 text-end">
                                    <div class="item-total fw-bold">@(item.Quantity * item.UnitPrice).ToString("F2") TL</div>
                                    <button class="btn btn-sm btn-outline-danger remove-item mt-2">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Sipariş Özeti</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Ara Toplam:</span>
                            <span id="subtotal">@(Model.CartItems.Sum(x => x.Quantity * x.UnitPrice).ToString("F2")) TL</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Kargo:</span>
                            <span id="shipping">Ücretsiz</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>KDV (%18):</span>
                            <span id="tax">@(Model.CartItems.Sum(x => x.Quantity * x.UnitPrice) * 0.18m).ToString("F2") TL</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <h5>Genel Toplam:</h5>
                            <h5 class="text-primary" id="grand-total">@(Model.CartItems.Sum(x => x.Quantity * x.UnitPrice) * 1.18m).ToString("F2") TL</h5>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a href="/Checkout/Index" class="btn btn-primary btn-lg">Ödemeye Geç</a>
                            <button class="btn btn-outline-secondary clear-cart">Sepeti Boşalt</button>
                            <a href="/Product/Index" class="btn btn-link">Alışverişe Devam Et</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Miktar artır
            $(document).on('click', '.increase-qty', function() {
                var input = $(this).siblings('.quantity-input');
                var currentQty = parseInt(input.val());
                var maxQty = parseInt(input.attr('max'));
                
                if (currentQty < maxQty) {
                    input.val(currentQty + 1);
                    updateQuantity($(this).closest('.cart-item').data('cart-item-id'), currentQty + 1);
                }
            });
            
            // Miktar azalt
            $(document).on('click', '.decrease-qty', function() {
                var input = $(this).siblings('.quantity-input');
                var currentQty = parseInt(input.val());
                
                if (currentQty > 1) {
                    input.val(currentQty - 1);
                    updateQuantity($(this).closest('.cart-item').data('cart-item-id'), currentQty - 1);
                }
            });
            
            // Manuel miktar değişimi
            $(document).on('change', '.quantity-input', function() {
                var qty = parseInt($(this).val());
                var maxQty = parseInt($(this).attr('max'));
                
                if (qty < 1) qty = 1;
                if (qty > maxQty) qty = maxQty;
                
                $(this).val(qty);
                updateQuantity($(this).closest('.cart-item').data('cart-item-id'), qty);
            });
            
            // Ürünü sepetten çıkar
            $(document).on('click', '.remove-item', function() {
                var cartItemId = $(this).closest('.cart-item').data('cart-item-id');
                
                if (confirm('Bu ürünü sepetten çıkarmak istediğinizden emin misiniz?')) {
                    removeFromCart(cartItemId);
                }
            });
            
            // Sepeti boşalt
            $('.clear-cart').click(function() {
                if (confirm('Sepeti tamamen boşaltmak istediğinizden emin misiniz?')) {
                    clearCart();
                }
            });
        });
        
        function updateQuantity(cartItemId, quantity) {
            $.post('/Cart/UpdateQuantity', { cartItemId: cartItemId, quantity: quantity }, function(response) {
                if (response.success) {
                    location.reload(); // Basit çözüm - sayfayı yenile
                } else {
                    alert(response.message);
                }
            });
        }
        
        function removeFromCart(cartItemId) {
            $.post('/Cart/RemoveFromCart', { cartItemId: cartItemId }, function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    alert(response.message);
                }
            });
        }
        
        function clearCart() {
            $.post('/Cart/ClearCart', function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    alert(response.message);
                }
            });
        }
    </script>
}
